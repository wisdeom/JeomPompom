<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:pompom"
    x:Class="pompom.Login.SignInPage">
	<ContentPage.Content>
        <StackLayout Padding="20">  
      <Label Text="Sign In" FontSize="20"></Label>  
      <Entry x:Name="MicrosoftAccount" Placeholder="Microsoft Account" WidthRequest="150"></Entry>  
      <Entry x:Name="Password" Placeholder="Password" WidthRequest="150"></Entry>  

      <StackLayout Orientation="Horizontal" Margin = "0, 20, 0, 0" >  
        <Button BackgroundColor="Gray" WidthRequest = "150" TextColor="White" Text="Sign In" HorizontalOptions = "CenterAndExpand" />  
      </StackLayout> 

      <StackLayout Orientation="Horizontal">  
        <Button BackgroundColor="Maroon" WidthRequest = "200" TextColor="White" Text="Forget password" HorizontalOptions = "CenterAndExpand" />  
      </StackLayout>
            
        </StackLayout>  
    </ContentPage.Content>
</ContentPage>
